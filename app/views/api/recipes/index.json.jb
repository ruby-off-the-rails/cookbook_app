@recipes.map do |recipe|
  {
    id: recipe.id,
    title: recipe.title,
    chef: recipe.chef,
    ingredients: recipe.ingredients,
    prep_time: recipe.friendly_prep_time,
    prep_time_numerical: recipe.prep_time,
    directions: recipe.directions,
    image_url: recipe.image_url,
    user_id: recipe.user_id,
    selected: false
  }
end
